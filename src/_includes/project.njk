---
layout: 'base.njk'
---

<article class="main-article">
    <div class="container container--narrow flow">
        <h1 class="article-title">{{ title }}</h1>
        <h2>{{ subtitle }}</h2>
        <p>{{ period }}</p>
        <p>{{ context }}</p>
        <p>{{ role }}</p>
        <figure class="">
            <img src="{{ image }}" alt="{{ imageAlt }}">
                <figcaption>
                    {{ imageAlt }}
                </figcaption>
        </figure>

        {{ content | safe }}
    </div>
</article>